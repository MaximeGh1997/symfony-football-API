{% extends 'admin/base.html.twig' %}

{% block title %}Les stades{% endblock %}

{% block body %}
    <div class="container cont-admin">
        <h1 class="mt-3 mb-3">Administration des stades</h1>
        {#<a href="{{path('admin_stades_create')}}"><button type="button" class="btn btn-info mb-3">Ajouter un stade</button></a>#}
        
        {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }}">
                {% for message in messages %}
                    <p>{{ message | raw }}</p>
                {% endfor %}
            </div>
        {% endfor %}

        <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">Capacité</th>
                <th scope="col">Ville</th>
                <th scope="col">Hôte</th>
                <th scope="col">Date d'ajout</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for stade in stades %}
            <tr>
                <td scope="row">{{stade.id}}</td>
                <td>{{stade.name}}</td>
                <td>{{stade.capacity}}</td>
                <td>{{stade.city}}</td>
                <td>Groupe {{stade.groups.name}}</td>
                <td>{{stade.createdAt | date('d/m/Y')}} {{stade.createdAt | date('H:i')}}</td>
                <td class="text-align-center">
                    <a href="{{path('admin_stades_edit', {'id':stade.id})}}" class="btn btn-info"><i class="fas fa-edit"></i></a>
                    {#<a href="{{path('admin_stades_delete', {'id':stade.id})}}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer le {{ stade.name }} ?')"><i class="fas fa-trash"></i></a>#}
                </td>
            </tr>
            {% endfor %}
        </tbody>
        </table> 
    </div>
{% endblock %}
