{% extends 'admin/base.html.twig' %}

{% block title %}Les matchs{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-3 mb-3">Administration des matchs</h1>

        <p>Sélectionnez un groupe</p>
        <form class="form-group" action="{{path('admin_matchs_index')}}" method="POST">
            <select class="custom-select" name="group">
                <option value="">Tous les matchs</option>
                {% for group in groups %}
                    <option value="{{group.id}}">Matchs du groupe {{group.name}}</option>
                {% endfor %}
            </select>
            <button type="submit" class="mt-3 mb-3 btn btn-success">Valider</button>
        </form>
        {% if matchs and not group %}
            <a href="{{path('admin_matchs_emptying')}}"><button type="button" class="btn btn-danger mb-3" onclick="return confirm('Êtes-vous sûr de vouloir supprimer tout les matchs ?')">Supprimer tout les matchs</button></a>
        {% endif %}

        {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }}">
                {% for message in messages %}
                    <p>{{ message | raw }}</p>
                {% endfor %}
            </div>
        {% endfor %}

        {% if group %}
            <h3>Groupe {{group.name}}</h3>
        {% else %}
            <h3>Tous les matchs</h3>
        {% endif %}

        {% if not matchs and not group %}
            <div class="alert alert-warning">Effectuez les différents tirages au sort</div>
        {% elseif group and matchs == null %}
            <a href="{{path('admin_matchs_drawing', {'id':group.id})}}"><button type="button" class="btn btn-success mb-3">Tirer au sort le calendrier</button></a>
        {% else %}
            <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Match</th>
                    <th scope="col">Date</th>
                    <th scope="col">Stade</th>
                    <th scope="col">Score final</th>
                    <th scope="col">Vainqueur</th>
                    <th scope="col">Perdant</th>
                    <th scope="col">Match nul</th>
                    <th scope="col">Phase</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for match in matchs %}
                <tr>
                    <td scope="row">{{match.id}}</td>
                    <td>{{match.team1.name}} - {{match.team2.name}}</td>
                    <td>{{match.date | date('d/m/Y')}} {{match.date | date('H:i')}}</td>
                    <td>{{match.stade.name}}</td>
                    {% if match.scoreT1 and match.score.T2 %} <td>{{match.scoreT1}} - {{match.scoreT2}}</td> {% else %} <td>A définir</td> {% endif %}
                    {% if match.winner %} <td>{{match.winner.name}}</td> {% else %} <td>A définir</td> {% endif %}
                    {% if match.looser %} <td>{{match.looser.name}}</td> {% else %} <td>A définir</td> {% endif %}
                    {% if match.draw == true %} <td>Oui</td> {%  elseif match.winner %} <td>Non</td> {% else %} <td>A définir</td> {% endif %}
                    {% if match.stage %} <td>{{match.stage.name}}</td> {%  elseif match.groupName %} <td>Groupe {{match.groupName.name}}</td> {% endif %}
                    {#<td class="text-align-center">
                        <a href="{{path('admin_matchs_edit', {'id':team.id})}}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="{{path('admin_matchs_delete', {'id':team.id})}}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer l\'équipe: {{ team.name }} ?')"><i class="fas fa-trash"></i></a>
                    </td>#}
                </tr>
                {% endfor %}
            </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}