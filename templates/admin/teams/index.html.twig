{% extends 'admin/base.html.twig' %}

{% block title %}Les équipes{% endblock %}

{% block body %}
    <div class="container cont-admin">
        <h1 class="mt-3 mb-3">Administration des équipes</h1>
        {#<a href="{{path('admin_teams_create')}}"><button type="button" class="btn btn-info mb-3">Ajouter une équipe</button></a>#}
        
        {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }}">
                {% for message in messages %}
                    <p>{{ message | raw }}</p>
                {% endfor %}
            </div>
        {% endfor %}

        <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Logo</th>
                <th scope="col">Nom</th>
                <th scope="col">Date d'ajout</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for team in teams %}
            <tr>
                <td scope="row">{{team.id}}</td>
                <td><img src="{{team.logo}}" alt="" class="logo-team-admin"></td>
                <td>{{team.name}}</td>
                <td>{{team.createdAt | date('d/m/Y')}} {{team.createdAt | date('H:i')}}</td>
                <td class="text-align-center">
                    <a href="{{path('admin_teams_edit', {'id':team.id})}}" class="btn btn-info"><i class="fas fa-edit"></i></a>
                    {#<a href="{{path('admin_teams_delete', {'id':team.id})}}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer l\'équipe: {{ team.name }} ?')"><i class="fas fa-trash"></i></a>#}
                </td>
            </tr>
            {% endfor %}
        </tbody>
        </table> 
    </div>
{% endblock %}
