{% extends 'base.html.twig' %}

{% block title %}Profil de {{user.username}}{% endblock %}

{% block body %}
<div class="container register h-100">
    <div class="row align-items-center">
        <div class="col-2 text-center">
            {% if user.picture %}
                <img src="/uploads/{{user.picture}}" alt="avatar de {{user.username}}" class="avatar mb-3">
            {% else %}
                <img src="http://placehold.it/300x300" alt="avatar de {{user.username}}" class="avatar mb-3">
            {% endif %}
        </div>
        <div class="col-10">
            <h1>{{user.firstname}} {{user.lastname}}</h1>
            <p class="font-italic">@{{user.username}} - {{user.email}}</p>
            {% if user is same as (app.user) %}
                <div class="mt-3">
                    {% for label, messages in app.flashes %}
                        <div class="alert alert-{{ label }}">
                            {% for message in messages %}
                                <p>{{ message | raw }}</p>
                            {% endfor %}
                        </div>
                    {% endfor %}
                    <a href="{{path('account_edit')}}" class="btn btn-info mr-2 mb-2">Modifier mon profil</a>
                    <a href="{{path('account_password')}}" class="btn btn-warning mr-2 mb-2">Modifier mon mot de passe</a>
                    <a href="{{path('account_delimg')}}" class="btn btn-danger mb-2">Supprimer mon image de profil</a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
